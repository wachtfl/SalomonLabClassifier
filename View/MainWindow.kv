<Button>:
    size_hint: (.4,.4)
    pos_hint: {'x': .1,'top': .2}
<MainWindowScreen>:
    GridLayout:
        rows: 2
        Button:
            text: 'go to settings'
            on_press: root.manager.current = 'settingsScreen'

<SettingsScreen>:
    canvas.before:
        Rectangle:
            source: 'brain3.jpg'
            pos: self.pos
            size: self.size
    spacing: 10
    padding: 5
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Settings"
            color: 100,100,80, 1
            bold: True
            font_size: 90
            font_name: 'Forte'

        Button:
            text: "Choose Classification Target:"
            background_color: (0, 0, 0, 1)
            id: 'target'
            on_release: root.listFeatures()
        Button:
            text: "Choose Classification type:"
            on_release: root.listAlgorithms()
        Label:
            text: 'define a test set: '
            color: (0,0,0,1)
            bold: True
        Slider:
            id: e1
            value: 20
            range: (0,100)
            value_track: True
            step: 1
            on_value: root.on_slider_value_changed(*args)

        Label:
            text: 'test set: {}%,  training set: {}%'.format(e1.value, 100-e1.value)
            color: (0,0,0,1)
            bold: True

        Button:
            text: "Submit"
            on_release: root.onSubmit()
