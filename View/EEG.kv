                id: 'target'
                on_release: root.listFeatures()
            Button:
                text: "Choose Classification type:"
                on_release: root.listAlgorithms()
            Label:
                text: 'define a test set: '
                color: (0,0,0,1)
                bold: True
            Slider:
                id: e1
                value: 20
                range: (0,100)
                value_track: True
                step: 1
                on_value: root.on_slider_value_changed(*args)

            Label:
                text: 'test set: {}%,  training set: {}%'.format(e1.value, 100-e1.value)
                color: (0,0,0,1)
                bold: True

            Button:
                text: "Submit"
                on_release: root.onSubmit()
    TabbedPanelItem:
        text: 'results'
        RstDocument:
            text:
                '\\n'.join(("Hello world", "-----------",
                "You are in the third tab."))
    TabbedPanelItem:
        text: 'graph'
        Label:
            text: 'importing data files, selecting'
        Image:
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: None, None
            size: 450, 450
