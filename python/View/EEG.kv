#:kivy 1.0.9

#try attaching screen to tab with https://github.com/kivy/kivy/wiki/Linking-ScreenManager-to-a-different-Widget

<Root>:


    size_hint: .9, .9
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False
    text_input: text_input

    TabbedPanelStrip:
        canvas:
            Color:
                rgba: (0, 1, 0, 1) # green
            Rectangle:
                size: self.size
                pos: self.pos
    TabbedPanelItem:
        text: 'data'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                size_hint_y: None
                height: 30
                Button:
                    text: 'Load'
                    #on_release: root.showLoadExplanationPopup()
                    on_release: root.show_load()

            BoxLayout:
                TextInput:
                    id: text_input
                    text: root.file_text

    TabbedPanelItem:
        text: 'settings'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "Settings"
                color: 100,100,80, 1
                bold: True
                font_size: 90
                font_name: 'Forte'

            Button:
                text: "Choose Classification Target: (features)"
                background_color: (0, 0, 0, 1)
                id: 'target'
                on_release: root.listFeatures(self)
            Button:
                text: "Choose Classification type:"
                on_release: root.listAlgorithms(self)
            Label:
                text: 'define a test set: '
                color: (0,0,0,1)
                bold: True
            Slider:
                id: e1
                value: 20
                range: (0,100)
                value_track: True
                step: 1
                on_value: root.on_slider_value_changed(*args)

            Label:
                text: 'test set: {}%,  training set: {}%'.format(e1.value, 100-e1.value)
                color: (0,0,0,1)
                bold: True

            Button:
                text: "Submit"
                on_release: root.onSubmit()
    TabbedPanelItem:
        text: 'results'
        RstDocument:
            text:
                '\\n'.join(("Hello world", "-----------",
                "You are in the third tab."))
    TabbedPanelItem:
        text: 'graph'
        Label:
            text: 'importing data files, selecting'
        Image:
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: None, None
            size: 450, 450
            source: 'sameGraph.jpg'

<LoadDialog>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        FileChooser:
            id: fc
            FileChooserIconLayout
            FileChooserListLayout

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Load"
                on_release: root.load(fc.path, fc.selection)
            Button:
                text: 'Icon View'
                on_press: fc.view_mode = 'icon'
            Button:
                text: 'List View'
                on_press: fc.view_mode = 'list'

<LoadDialog-1>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
