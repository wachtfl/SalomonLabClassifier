#:kivy 1.0.9

#try attaching screen to tab with https://github.com/kivy/kivy/wiki/Linking-ScreenManager-to-a-different-Widget

<Root>:


    size_hint: .95, .95
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

    background_color: (1, 1, 1, 1)    # White colour
    border: [0, 0, 0, 0]
    background_image: '../images/logo roy3 final.jpg'

    TabbedPanelItem:
        id: data_tab
        text: 'data'
        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 40
                Button:
                    text: 'Load A File From Computer'
                    on_release: root.show_load(1)
                    background_color: (0, 0, 1, 1)
                Label:
                    id:file_name1
                    text: 'file chosen: {}'.format(root.file_name1)
                    color: (0,0,0,1)
                    bold: True
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 40
                Button:
                    text: 'Load A File From Computer'
                    on_release: root.show_load(2)
                    background_color: (0, 0, 1, 1)
                Label:
                    id:file_name2
                    text: 'file chosen: {}'.format(root.file_name2)
                    color: (0,0,0,1)
                    bold: True

            Button:
                text: "Submit files"
                on_release: root.onComplete()
                size_hint_y: None
                height: 40
                background_color: (0,0,1,1)


    TabbedPanelItem:
        text: 'settings'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "Settings"
                color: 100,100,80, 1
                bold: True
                font_size: 90
                font_name: 'Forte'

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.2
                height: 10
                #Button:
                #   text: "Classification Target: (features)"
                #   on_release: root.listFeatures(self)
                Button:
                    text: "Classification type:"
                    on_release: root.listAlgorithms(self)
                Button:
                    text: "for SVM - choose decoding type"
                    on_release: root.showDecodingTypes(self)
                Button:
                    text: "Choose _____________"
                    #on_release: root.listAlgorithms(self)
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 50

            Label:
                size_hint_y: None
                height: 80
            Label:
                text: 'define a test set: '
                color: (0,0,0,1)
                bold: True
                size_hint_y: None
                height: 40
            Slider:
                id: e1
                value: 20
                range: (0,100)
                value_track: True
                step: 1
                on_value: root.on_slider_value_changed(*args)
                size_hint_y: None
                height: 40

            Label:
                text: 'test set: {}%,  training set: {}%'.format(e1.value, 100-e1.value)
                color: (0,0,0,1)
                bold: True
                size_hint_y: None
                height: 40

            Button:
                text: "Start Decoding"
                on_release: root.onStartDecoding()
                size_hint_y: None
                height: 40
                background_color: (0,0,1,1)
    TabbedPanelItem:
        text: 'results'
        RstDocument:
            text: "log"
    TabbedPanelItem:
        text: 'graph'
        Label:
            text: 'importing data files, selecting'

<LoadDialog>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        pos: root.pos

        FileChooser:
            id: fc
            FileChooserIconLayout
            FileChooserListLayout

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Load"
                on_release: root.load(fc.path, fc.selection)
            Button:
                text: 'Icon View'
                on_press: fc.view_mode = 'icon'
            Button:
                text: 'List View'
                on_press: fc.view_mode = 'list'

<LoadDialog-1>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            FileChooserListLayout

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
